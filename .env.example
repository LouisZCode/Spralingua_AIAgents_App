# Spralingua Environment Configuration
# Copy this file to .env and fill in your actual values

# =====================================
# Required API Keys
# =====================================

# Anthropic Claude API Key
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Minimax API Credentials (for Text-to-Speech)
# Get yours at: https://www.minimaxi.com/
MINIMAX_API_KEY=your_minimax_api_key_here
MINIMAX_GROUP_ID=your_minimax_group_id_here
MINIMAX_VOICE_ID=your_default_voice_id_here

# =====================================
# Database Configuration
# =====================================

# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database_name
# Local development: postgresql://postgres:password@localhost:5432/spralingua_dev
# Production: use your hosted database URL (e.g., Railway, Heroku)
DATABASE_URL=postgresql://user:password@localhost:5432/spralingua_dev

# =====================================
# Flask Configuration
# =====================================

# Flask Secret Key (generate a secure random string)
# You can generate one with: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your_secret_key_here_min_32_characters_long

# Flask Environment (development or production)
FLASK_ENV=development

# =====================================
# Optional Configuration
# =====================================

# Deployment Platform
# RAILWAY_ENVIRONMENT=production

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
